<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@android:color/black">

    <TextView
        android:id="@+id/tv_new_semester_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="이번 학기도\n화이팅! (ง°̀ﾛ°́)ง "
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/nanumsquareround"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_new_semester_dialog_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ninepatch_blue"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_semester_title">

        <View
            android:id="@+id/view_new_semester_mark1"
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#14b7ff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="현재 학년 / 학기"
            android:fontFamily="@font/nanumsquareround"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#171717"
            app:layout_constraintLeft_toRightOf="@id/view_new_semester_mark1"
            app:layout_constraintBottom_toBottomOf="@id/view_new_semester_mark1"/>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner_new_semester_select_semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/view_new_semester_mark1"/>

        <View
            android:id="@+id/view_new_semester_mark2"
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/spinner_new_semester_select_semester"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#14b7ff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="개강일"
            android:fontFamily="@font/nanumsquareround"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#171717"
            app:layout_constraintLeft_toRightOf="@id/view_new_semester_mark2"
            app:layout_constraintBottom_toBottomOf="@id/view_new_semester_mark2"/>

        <DatePicker
            android:id="@+id/datepicker_new_semester_open"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            app:layout_constraintTop_toBottomOf="@id/view_new_semester_mark2"/>

        <View
            android:id="@+id/view_new_semester_mark3"
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/datepicker_new_semester_open"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#14b7ff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="종강일"
            android:fontFamily="@font/nanumsquareround"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#171717"
            app:layout_constraintLeft_toRightOf="@id/view_new_semester_mark3"
            app:layout_constraintBottom_toBottomOf="@id/view_new_semester_mark3"/>

        <DatePicker
            android:id="@+id/datepicker_new_semester_close"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            style="@style/MyDatePickerStyle"
            android:theme="@style/MyDatePickerSpinnerStyle"
            app:layout_constraintTop_toBottomOf="@id/view_new_semester_mark3"/>
        
        <View 
            android:layout_width="match_parent" 
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/datepicker_new_semester_close"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <TextView
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="시작"
        android:textSize="12sp"
        android:fontFamily="@font/nanumsquareround"
        android:textStyle="bold"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/oval_blue"
        app:layout_constraintBottom_toBottomOf="@id/constraint_new_semester_dialog_holder"
        app:layout_constraintTop_toBottomOf="@id/constraint_new_semester_dialog_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>