<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.dmp.graduatedpartner.presentation.start.StartViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#14b7ff">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/yellowbluecircle"
            android:alpha="0.4"
            android:layout_marginStart="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/yellowbluecircle"
            android:alpha="0.4"
            android:rotation="-90"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="208dp"/>

        <TextView
            android:id="@+id/text_start_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성공적인 학교 탈출"
            android:textSize="25sp"
            android:layout_marginTop="37dp"
            android:textColor="#ffffff"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/nanumsquareround"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.046"/>

        <TextView
            android:id="@+id/text_start_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="졸업파트너"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/nanumsquareround"
            app:layout_constraintLeft_toLeftOf="@id/text_start_title1"
            app:layout_constraintTop_toBottomOf="@id/text_start_title1"/>

        <TextView
            android:id="@+id/text_start_startButton"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:text="시작하기"
            android:textSize="20sp"
            android:textColor="#14b7ff"
            android:textStyle="bold"
            android:background="@drawable/whitecircle"
            android:fontFamily="@font/nanumsquareround"
            android:onClick="onClickStartButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.450"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text=" ε⌯(ง ˙ω˙)ว "
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/text_start_startButton"
            app:layout_constraintLeft_toLeftOf="@id/text_start_startButton"
            app:layout_constraintRight_toRightOf="@id/text_start_startButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>