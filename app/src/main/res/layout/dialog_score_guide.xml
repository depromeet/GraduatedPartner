<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/black">

    <TextView
        android:id="@+id/tv_score_guide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="졸업 파트너를\n사용하기 전에!"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginStart="44dp"
        android:lineSpacingExtra="8dp"
        android:fontFamily="@font/nanumsquareround"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_score_guide_mark1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@drawable/oval_blue"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/tv_score_guide_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_score_guide_title"
        android:text="1"/>

    <TextView
        android:id="@+id/tv_score_guide_subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="삭제하실땐 심사숙고!  ( •́ ̯•̀ ) "
        android:fontFamily="@font/nanumsquareround"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/tv_score_guide_mark1"
        app:layout_constraintTop_toTopOf="@id/tv_score_guide_mark1"
        app:layout_constraintBottom_toBottomOf="@id/tv_score_guide_mark1"/>

    <TextView
        android:id="@+id/tv_score_guide_content1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="파트너님이 저를 삭제하시면 모든 정보가 날라갑니다. 삭제하기 전에 심사숙고 해주세요!"
        android:fontFamily="@font/nanumsquareround"
        android:maxWidth="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_score_guide_subtitle1"
        app:layout_constraintTop_toBottomOf="@id/tv_score_guide_mark1"/>

    <TextView
        android:id="@+id/tv_score_guide_mark2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@drawable/oval_blue"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:text="2"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_score_guide_content1"
        app:layout_constraintLeft_toLeftOf="@id/tv_score_guide_mark1"/>

    <TextView
        android:id="@+id/tv_score_guide_subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="세부정보를 입력하세요!  ʕ㋛ʔ "
        android:fontFamily="@font/nanumsquareround"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/tv_score_guide_mark2"
        app:layout_constraintTop_toTopOf="@id/tv_score_guide_mark2"
        app:layout_constraintBottom_toBottomOf="@id/tv_score_guide_mark2"/>

    <TextView
        android:id="@+id/tv_score_guide_content2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="이수학점이나 성적을 입력해주시면 저희가 체계적으로 정리해드립니다!"
        android:fontFamily="@font/nanumsquareround"
        android:maxWidth="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_score_guide_subtitle2"
        app:layout_constraintTop_toBottomOf="@id/tv_score_guide_mark2"/>

    <TextView
        android:id="@+id/tv_score_guide_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fcde30"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/oval_blue"
        android:text="✓ 모두 알겠어요!"
        android:fontFamily="@font/nanumsquareround"
        android:maxWidth="300dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_score_guide_content2"/>
</androidx.constraintlayout.widget.ConstraintLayout>