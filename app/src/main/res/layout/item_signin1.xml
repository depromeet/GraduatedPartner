<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_signin1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="파트너님은\n누구신가요?"
            android:textSize="25sp"
            android:textColor="#171717"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumsquareround"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <View
            android:id="@+id/view_signin1_mark1"
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/text_signin1_title"
            app:layout_constraintLeft_toLeftOf="@id/text_signin1_title"
            android:background="#14b7ff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="#171717"
            android:fontFamily="@font/nanumsquareround"
            app:layout_constraintTop_toTopOf="@id/view_signin1_mark1"
            app:layout_constraintBottom_toBottomOf="@id/view_signin1_mark1"
            app:layout_constraintLeft_toRightOf="@id/view_signin1_mark1"
            android:layout_marginStart="5dp"
        />

        <EditText
            android:id="@+id/edit_sigin1_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:inputType="text"
            android:focusable="true"
            android:theme="@style/EditTextStyle_Signin1"
            android:focusableInTouchMode="true"
            app:layout_constraintTop_toBottomOf="@id/view_signin1_mark1"
            app:layout_constraintLeft_toRightOf="@id/view_signin1_mark1"
        />

        <View
            android:id="@+id/view_signin1_mark2"
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/edit_sigin1_name"
            app:layout_constraintLeft_toLeftOf="@id/view_signin1_mark1"
            android:background="#14b7ff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학교형태"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="#171717"
            android:fontFamily="@font/nanumsquareround"
            app:layout_constraintTop_toTopOf="@id/view_signin1_mark2"
            app:layout_constraintBottom_toBottomOf="@id/view_signin1_mark2"
            app:layout_constraintLeft_toRightOf="@id/view_signin1_mark2"
            android:layout_marginStart="5dp"/>

        <Spinner
            android:id="@+id/spinner_sigin1_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:dropDownWidth="match_parent"

            app:layout_constraintTop_toBottomOf="@id/view_signin1_mark2"
            app:layout_constraintLeft_toRightOf="@id/view_signin1_mark2"/>

        <View
            android:id="@+id/view_signin1_mark3"
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/spinner_sigin1_school"
            app:layout_constraintLeft_toLeftOf="@id/view_signin1_mark2"
            android:background="#14b7ff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 학년 / 학기"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="#171717"
            android:fontFamily="@font/nanumsquareround"
            app:layout_constraintTop_toTopOf="@id/view_signin1_mark3"
            app:layout_constraintBottom_toBottomOf="@id/view_signin1_mark3"
            app:layout_constraintLeft_toRightOf="@id/view_signin1_mark3"
            android:layout_marginStart="5dp"/>

        <Spinner
            android:id="@+id/spinner_sigin1_current_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/view_signin1_mark3"
            app:layout_constraintLeft_toRightOf="@id/view_signin1_mark3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>