<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/grade_point_edit_shape">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/grade_point_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@null"
        android:hint="0"
        android:textColor="#171717"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="9dp"
        android:textColor="#c3c3c3"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/grade_point_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/grade_point_edit"
        app:layout_constraintTop_toTopOf="@id/grade_point_edit"
        tools:text="/123학점" />

</androidx.constraintlayout.widget.ConstraintLayout>